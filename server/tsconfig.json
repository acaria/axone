{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictNullChecks": false,
		"moduleResolution": "node",
		"sourceMap": true,
		"noImplicitAny": true,
		"allowJs": true,
		"lib": [
			"es2017", "dom"
		]
	},
	"awesomeTypescriptLoaderOptions": {
		"forkChecker": true
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}